generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  content   String
  author         String?
  tags      String?  // âœ… single string column
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  coverImageUrl  String?   // optional URL for cover image
  coverImageAlt  String?   // optional alt text
}
